class Mahasiswa:
    # a. Buat class Mahasiswa dengan ketentuan nim dan nama public, semester protected dan IPK private
    def __init__(self, nim, nama, semester, ipk):
        # Public
        self.nim = nim
        self.nama = nama
        
        # Protected (ditandai dengan satu underscore)
        self._semester = semester
        
        # Private (ditandai dengan dua underscore)
        self.__ipk = ipk

    # --- Methods untuk Atribut Protected (_semester) ---
    
    # Getter Protected
    def get_semester(self):
        return self._semester

    # Setter Protected
    def set_semester(self, semester_baru):
        if semester_baru <= 0:
            raise ValueError("Semester harus lebih besar dari 0.")
        self._semester = semester_baru
        print(f"-> Semester berhasil diubah menjadi: {self._semester}")

    # --- Methods untuk Atribut Private (__ipk) ---
    
    # Getter Private (Wajib agar nilai bisa dibaca dari luar)
    def get_ipk(self):
        return self.__ipk

    # Setter Private (Wajib agar nilai bisa diubah dari luar)
    def set_ipk(self, ipk_baru):
        if not 0.0 <= ipk_baru <= 4.0:
            raise ValueError("Nilai IPK harus berada dalam rentang 0.0 sampai 4.0.")
        self.__ipk = ipk_baru
        print(f"-> IPK berhasil diubah menjadi: {self.__ipk}")

# --- Bagian Eksekusi Program ---
if __name__ == "__main__":
    # b. Buat objek 2 Mahasiswa dan tampilkan: nim, nama, semester dan IPK
    mhs1 = Mahasiswa("2023001", "Ani", 1, 3.85)
    mhs2 = Mahasiswa("2023002", "Budi", 3, 3.20)
    
    print("="*40)
    print("DATA MAHASISWA AWAL")
    print("="*40)

    print("\n--- Mahasiswa 1 ---")
    # Public (Akses langsung)
    print(f"NIM (Public): {mhs1.nim}")
    print(f"Nama (Public): {mhs1.nama}")
    
    # Protected (Akses melalui Getter)
    print(f"Semester (Protected): {mhs1.get_semester()}")
    
    # Private (Akses melalui Getter)
    print(f"IPK (Private): {mhs1.get_ipk()}")
    
    print("\n--- Mahasiswa 2 ---")
    print(f"NIM (Public): {mhs2.nim}")
    print(f"Nama (Public): {mhs2.nama}")
    print(f"Semester (Protected): {mhs2.get_semester()}")
    print(f"IPK (Private): {mhs2.get_ipk()}")

    # c. Ganti semester dan IPK (bebas ingin mengganti dengan angka berapapun)
    print("\n" + "="*40)
    print("PERUBAHAN DATA MAHASISWA 1")
    print("="*40)
    
    # Mengganti semester (Protected) melalui Setter
    print("Mengganti Semester Mahasiswa 1...")
    mhs1.set_semester(2)
    
    # Mengganti IPK (Private) melalui Setter
    print("Mengganti IPK Mahasiswa 1...")
    mhs1.set_ipk(3.95)
    
    print("\n--- Data Mahasiswa 1 Setelah Perubahan ---")
    print(f"Semester (Protected Baru): {mhs1.get_semester()}")
    print(f"IPK (Private Baru): {mhs1.get_ipk()}")